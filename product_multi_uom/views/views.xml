<odoo>
  <data>
   <record id="product_template_sec_inherit_form" model="ir.ui.view">
	<field name="name">product.template.inherit.form</field>
	<field name="model">product.template</field>
	<field name="inherit_id" ref="product.product_template_only_form_view" />
	<field name="arch" type="xml">

		<xpath expr="//field[@name='company_id']" position="after">
		<field name="sec_uom_ids" widget="many2many_tags" context="{'show_product_uom':1}"  class="mr4"/>
		</xpath>

	</field>
   </record>

    <record id="product_template_multi_uom" model="ir.ui.view">
	<field name="name">product.template.multi.uom</field>
	<field name="model">product.template</field>
	<field name="inherit_id" ref="product.product_template_only_form_view" />
	<field name="arch" type="xml">

		<xpath expr="//page[@name='variants']" position="after">
		<page name="Multi_Uom" string="Multi Uom" >
			   <div style="width:50%;float:left;">
            <field name="multi_uom_line_ids" widget="one2many" width="20">
                  <tree editable="bottom" width="50">
					   <field name="product_tmpl_id" invisible="1" />
					   <field name="uom_id"/>
                        <field name="no_of_pkt" style="50%;" />
                  </tree>
            </field>
			   </div>
        </page>
		</xpath>

	</field>
   </record>









  </data>
</odoo>