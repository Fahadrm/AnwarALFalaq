<odoo>
  <data>
    <record id="loss_product_template_form_view" model="ir.ui.view">
            <field name="name">product.template.form.view</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='barcode']" position="after">
                  <field name="loss_product"/>
                </xpath>
            </field>
        </record>


      <record id="loss_product_template_list_view" model="ir.ui.view">
            <field name="name">product.template.form.view</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_tree_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='active']" position="after">
                  <field name="loss_product" invisible="1"/>
                </xpath>
                <xpath expr="//tree" position="attributes">
                    <attribute name="decoration-danger">loss_product == True</attribute>
                </xpath>
            </field>
        </record>

      <record id="loss_product_form_view" model="ir.ui.view">
            <field name="name">product.product.form.view</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='barcode']" position="after">
                  <field name="loss_product"/>
                </xpath>
            </field>
        </record>



      <record id="loss_product_list_view" model="ir.ui.view">
            <field name="name">product.product.form.view</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_product_tree_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='active']" position="after">
                  <field name="loss_product" invisible="1"/>
                </xpath>
                <xpath expr="//tree" position="attributes">
                    <attribute name="decoration-warning">loss_product == True</attribute>
                </xpath>
            </field>
        </record>
  </data>
</odoo>