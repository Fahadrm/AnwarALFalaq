<odoo>
    <data>
              <record id="loss_product_res_config_settings" model="ir.ui.view">
            <field name="name">res.config.settings.form.view</field>
            <field name="model">res.config.settings</field>
           <field name="inherit_id" ref="base.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                    <h2>Loss Product Information</h2>

                    <div class="row mt16 o_settings_container" id="o_settings_loss_product">
                        <div class="col-12 col-lg-6 o_setting_box"
                            id="loss_product_terminal_setting">
                            <div class="o_setting_right_pane">
                                <div>
                                    <label string="Users" for="sale_tax_id"/>
                                    <div class="text-muted">
                                        Set users for Loss product message 
                                    </div>
                                    <div class="content-group mt16">
                                         <field name="user_ids" colspan="4" widget="many2many_tags"/>
<!--                                        <field name="sale_tax_id" colspan="4" nolabel="1" domain="[('type_tax_use', 'in', ('sale', 'all')), ('company_id', '=', company_id)]"/>-->
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>