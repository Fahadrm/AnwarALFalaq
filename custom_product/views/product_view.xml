<odoo>
<data>
<record id="product_template_sec_inherit_form" model="ir.ui.view">
	<field name="name">product.template.inherit.form</field>
	<field name="model">product.template</field>
	<field name="inherit_id" ref="product.product_template_only_form_view" />
	<field name="arch" type="xml">
				<div class="oe_button_box" name="button_box">
						<button name="view_product_qty" string="Sec UOM On Hand"
							type="object" class="oe_state_button" icon="fa-cubes" readonly="1"/>
						 <field name="total_qty" widget="statinfo" nolabel="1" class="mr4"/>
						<field name="sec_uom_id" readonly="1" class="mr4" />
					</div>
		<xpath expr="//field[@name='company_id']" position="after">
				<field name="sec_uom_select"/>
				<field name="product_uom_category_id"  attrs="{'invisible':[('sec_uom_select', '=', False)]}" class="mr4" readonly="0"/>
				<field name="sec_uom_id" attrs="{'invisible':[('sec_uom_select', '=', False)]}" class="mr4"/>
		</xpath>
	</field>
</record>
</data>
</odoo>