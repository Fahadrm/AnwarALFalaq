<odoo>
  <data>

       <record id="sale_order_vehivle_area_form" model="ir.ui.view">
            <field name="name">Area vehicle</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='payment_term_id']" position="after">
                    <field name="vehicle_id"/>
                    <field name="area_id" required="1"/>
                </xpath>
            </field>
       </record>


       <record model="ir.ui.view" id="sale_vehicle_form">
      <field name="name">sale.vehicle.form</field>
      <field name="model">sale.vehicle</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
              <group>
                  <field name="name" />
              </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="sale_vehicle_action_window">
      <field name="name">vehicle</field>
      <field name="res_model">sale.vehicle</field>
      <field name="view_mode">tree,form</field>
       <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">Create
                </p>
            </field>
    </record>


      <menuitem name="Vehicle" id="sale_vehicle_submenu" parent="sale.menu_sale_config"
              action="sale_vehicle_action_window"/>






    <record model="ir.ui.view" id="sale_area_form">
      <field name="name">sale.area.form</field>
      <field name="model">sale.area</field>
      <field name="arch" type="xml">
        <form>
          <sheet>

                        <group>

                        <field name="name" />

                        </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="sale_area_action_window">
      <field name="name">Area</field>
      <field name="res_model">sale.area</field>
      <field name="view_mode">tree,form</field>
       <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">Create
                </p>
            </field>
    </record>


      <menuitem name="Area" id="sale_area_submenu" parent="sale.menu_sale_config"
              action="sale_area_action_window"/>




  </data>
</odoo>