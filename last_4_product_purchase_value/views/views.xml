<odoo>
    <data>

        <record id="view_last_4_purchase_value_tree" model="ir.ui.view">
            <field name="name">purchase.order.line.tree</field>
            <field name="model">purchase.order.line</field>
            <field name="arch" type="xml">
                <tree string="Last Purchase Value" create="false">
                    <field name="order_id"/>
                    <field name="partner_id"/>
                    <field name="product_qty"/>
                    <field name="price_unit"/>
                </tree>
            </field>
        </record>

        <record id="view_purchase_order_last_4_purchase_value_form" model="ir.ui.view">
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath
                        expr="//field[@name='order_line']/tree//field[@name='price_subtotal']"
                        position="after"
                >
                    <button
                            string="Last purchase value"
                            name="action_open_last_purchase_product_value_view"
                            type="object"
                            icon="fa-info"
                    />
<!--                    class="oe_highlight"-->
                </xpath>
            </field>
        </record>
    </data>
</odoo>